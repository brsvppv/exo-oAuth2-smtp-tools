{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SMTP App Provisioning Config",
  "type": "object",
  "required": ["DisplayName","TenantId"],
  "properties": {
    "DisplayName": { "type": "string" },
    "TenantId": { "type": "string" },
    "Mailboxes": { "type": "array", "items": { "type": "string", "format": "email" } },
    "SecretValidityYears": { "type": "integer", "minimum": 1, "maximum": 10 },
    "ExportProtectedPath": { "type": "string" },
    "ExportSecretPath": { "type": "string" },
    "UseSecretManagement": { "type": "boolean" }
  }
}
